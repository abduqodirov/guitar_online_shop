<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/details_image_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintDimensionRatio="H,2:1.6"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/details_image_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/details_image_pager"
            app:tabBackground="@drawable/tab_dot_unselected"
            app:tabGravity="center"
            app:tabIndicator="@drawable/tab_dot_selected"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorGravity="center" />

        <TextView
            android:id="@+id/details_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/details_rating_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_image_pager" />

        <ImageView
            android:id="@+id/details_rating_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/details_rating_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/details_rating_txt" />

        <TextView
            android:id="@+id/details_rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/details_name_txt"
            app:layout_constraintEnd_toStartOf="@id/details_rating_icon"
            app:layout_constraintTop_toTopOf="@id/details_name_txt"
            tools:text="4.5" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/details_rating_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="details_rating_icon, details_rating_txt" />

        <TextView
            android:id="@+id/details_price_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@id/details_rating_icon"
            app:layout_constraintStart_toStartOf="@id/details_name_txt"
            app:layout_constraintTop_toBottomOf="@id/details_name_txt" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/details_comments_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@id/details_rating_icon"
            app:layout_constraintStart_toStartOf="@id/details_name_txt"
            app:layout_constraintTop_toBottomOf="@id/details_price_txt"
            tools:itemCount="3"
            tools:listitem="@layout/item_comment" />

        <Button
            android:id="@+id/details_comments_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/show_more_comments"
            app:layout_constraintEnd_toEndOf="@id/details_comments_recycler"
            app:layout_constraintStart_toStartOf="@id/details_comments_recycler"
            app:layout_constraintTop_toBottomOf="@id/details_comments_recycler" />

        <TextView
            android:id="@+id/details_desc_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/details_rating_icon"
            app:layout_constraintStart_toStartOf="@id/details_name_txt"
            app:layout_constraintTop_toBottomOf="@id/details_comments_btn"
            tools:text="@string/long_dummy_text" />

        <!--
        TODO Hide this button if description text lines smaller than 4-->
        <Button
            android:id="@+id/details_desc_expand_collapse_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/show_more_description"
            app:layout_constraintStart_toStartOf="@id/details_desc_txt"
            app:layout_constraintTop_toBottomOf="@id/details_desc_txt" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/details_data_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="details_name_txt, details_price_txt, details_desc_txt, details_rating_group, details_comments_recycler" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/details_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_message_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/details_retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            app:layout_constraintEnd_toEndOf="@id/details_message_txt"
            app:layout_constraintStart_toStartOf="@id/details_message_txt"
            app:layout_constraintTop_toBottomOf="@id/details_message_txt" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/details_error_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="details_message_txt, details_retry_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
